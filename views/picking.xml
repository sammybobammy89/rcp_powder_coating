<?xml version='1.0' encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_form_extend" model="ir.ui.view">
        <field name="name">stock.picking.form.extend</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field name="sourced_from_sm_stock_location" invisible="1"/>
            </field>
            <xpath expr="//button[@name='action_put_in_pack']" position="before">
                <button class="oe_highlight" style="margin-right:5px;" name="action_put_in_pc_pack" type="object" string="Pack For Powder Coating"
                        attrs="{'invisible': ['|',('state', 'in', ('draft', 'done', 'cancel')),('sourced_from_sm_stock_location','=',False)]}"
                        groups="rcp_powder_coating.powder_coating_group_manager"/>
                <button class="oe_highlight" style="margin-right:5px;" name="action_put_in_pc_pack_separate" type="object" string="Pack Separately For Powder Coating"
                        attrs="{'invisible': ['|',('state', 'in', ('draft', 'done', 'cancel')),('sourced_from_sm_stock_location','=',False)]}"
                        groups="rcp_powder_coating.powder_coating_group_manager"/>
            </xpath>
            <xpath expr="//button[@name='action_put_in_pack']" position="after">
                <button class="oe_highlight" style="margin-left:5px;" name="action_put_in_pack_separate" type="object" string="Put in Separate Packs"
                        attrs="{'invisible': [('state', 'in', ('draft', 'done', 'cancel'))]}"
                        groups="rcp_powder_coating.powder_coating_group_manager"/>
            </xpath>
        </field>
    </record>
</odoo>